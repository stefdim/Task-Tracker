@model To_Do_Tracker.Models.ToDo

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger my-4">Delete Task</h1>

<h3 class="text-center text-warning mb-4">Are you sure you want to delete this task?</h3>

<div class="card shadow-sm bg-dark text-light p-4">
    <h4 class="text-primary">Task Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.TaskStatus)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TaskStatus)
        </dd>
    </dl>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg me-2">
            <i class="fas fa-trash-alt"></i> Delete Task
        </button>
    </form>
    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>
