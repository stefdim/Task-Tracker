@model To_Do_Tracker.Models.ToDo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-light my-4">Edit Task</h1>

<div class="card shadow p-4 bg-dark text-light">
    <h4 class="text-secondary">Task Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Description Field -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold text-light">Description</label>
                    <input asp-for="Description" class="form-control bg-dark text-light border-light" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Task Status Dropdown -->
                <div class="form-group mb-3">
                    <label asp-for="TaskStatus" class="form-label fw-bold text-light">Task Status</label>
                    <select asp-for="TaskStatus" class="form-control bg-dark text-light border-light">
                        <option value="Completed">Completed</option>
                        <option value="Canceled">Canceled</option>
                        <option value="Pending">Pending</option>
                    </select>
                    <span asp-validation-for="TaskStatus" class="text-danger"></span>
                </div>

                <!-- Action Buttons -->
                <div class="form-group d-flex gap-2 mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
