@model To_Do_Tracker.Models.ToDo
@{
    ViewData["Title"] = "Search";
}

<h1 class="text-center text-light my-4">Search Tasks</h1>

<div class="card shadow p-4 bg-dark text-light">
    <h4 class="text-secondary">Search Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="ShowSearchResults">
                <!-- Search by Description -->
                <div class="form-group mb-3">
                    <label for="SearchWord" class="control-label text-light">Search by Description</label>
                    <input name="SearchWord" class="form-control bg-dark text-light border-light" placeholder="Enter description to search" />
                </div>

                <!-- Search by TaskStatus -->
                <div class="form-group mb-3">
                    <label for="TaskStatus" class="control-label text-light">Search by Status</label>
                    <select name="TaskStatus" class="form-control bg-dark text-light border-light">
                        <option value="">-- Select Status --</option>
                        @foreach (var status in Enum.GetValues(typeof(To_Do_Tracker.Models.ToDo.Status)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                </div>

                <!-- Inline Buttons -->
                <div class="form-group d-flex gap-2 mt-3">
                    <input type="submit" value="Search" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
