@model To_Do_Tracker.Models.ToDo

<h4>ToDo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
            
            <div class="form-group">
                <label for="SearchWord" class="control-label">Search by Description</label>
                <input name="SearchWord" class="form-control" />
                
            </div>

            <!-- Search by TaskStatus -->
            <div class="form-group">
                <label for="TaskStatus" class="control-label">Search by Status</label>
                <select name="TaskStatus" class="form-control">
                    <option value="">-- Select Status --</option>
                    @foreach (var status in Enum.GetValues(typeof(To_Do_Tracker.Models.ToDo.Status)))
                    {
                        <option value="@status">@status</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
